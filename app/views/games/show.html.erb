<h1>Go Game</h1>

<style>
  .game {}
</style>

<div
  id="game"
  class="game"
  data-game-id="<%= @game.id %>"
  data-player-id="<%= session[:player_id] %>"
  data-game="<%= @game.engine.serialize %>"
></div>

<div id="chat-box" class="chat-box"></div>
<form id="chat-form">
  <input
    type="text"
    id="chat-input"
    placeholder="Say something..."
    autocomplete="off"
  />
  <button type="submit">Send</button>
</form>

<style>
  #board td {
    width: 32px;
    height: 32px;
    text-align: center;
    vertical-align: middle;
    border: 1px solid #999;
    font-size: 24px;
    cursor: pointer;
    user-select: none;
  }
</style>
